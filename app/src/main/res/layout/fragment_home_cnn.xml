<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.fragments.home.HomeCnnFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_toRightOf="@id/btnMenuDerections"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvGreeting"
                                android:layout_width="match_parent"
                                android:fontFamily="@font/rfreg"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_9sdp"
                                android:text="Selamat Pagi,"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvUsername"
                                android:layout_width="match_parent"
                                android:text="Kevin Gilbert Toding"
                                android:fontFamily="@font/rfmed"
                                android:includeFontPadding="false"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/black"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/btnMenuDerections"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_redaction"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:text="CNN Indonesia"
                                android:textColor="@color/black"
                                android:fontFamily="@font/rfbold"
                                android:textSize="@dimen/_40sdp"/>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:scrollbars="none"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:padding="@dimen/_5sdp"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/menuTerbaru"
                                        android:orientation="vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <LinearLayout

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_star"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbTerbaru"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Terbaru"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/black"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>

                                        <View
                                            android:id="@+id/lnTerbaru"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:background="@color/black"/>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/menuNasional"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_local"
                                                android:layout_height="@dimen/_14sdp"/>
                                            <TextView
                                                android:id="@+id/tvTbNasional"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Nasional"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>
                                        <View
                                            android:id="@+id/lnNasional"
                                            android:visibility="gone"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:background="@color/black"/>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/menuOlahraga"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_sport"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbOlahraga"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Olahraga"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>

                                        <View
                                            android:id="@+id/lnOlahraga"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:id="@+id/menuTeknologi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_tech"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbTeknologi"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Teknologi"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>

                                        <View
                                            android:id="@+id/lnTeknologi"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/menuEkonomi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_ekonomi"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbEkonomi"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Ekonomi"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>


                                        </LinearLayout>

                                        <View
                                            android:id="@+id/lnEkonomi"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/menuInternasional"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_globe"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbInternasional"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Internasional"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>
                                        <View
                                            android:id="@+id/lnInternasional"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:id="@+id/menuHiburan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_entertaiment"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbHiburan"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Hiburan"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>
                                        <View
                                            android:id="@+id/lnHiburan"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/menuGayaHidup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_20sdp"
                                            android:orientation="horizontal">
                                            <ImageView
                                                android:layout_width="@dimen/_14sdp"
                                                android:layout_gravity="center"
                                                android:src="@drawable/ic_life_style"
                                                android:layout_height="@dimen/_14sdp"/>

                                            <TextView
                                                android:id="@+id/tvTbGayaHidup"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Gaya hidup"
                                                android:layout_marginLeft="@dimen/_5sdp"
                                                android:layout_gravity="center"
                                                android:textColor="@color/second_font"
                                                android:textSize="@dimen/_12sdp"
                                                android:fontFamily="@font/rfmed"/>
                                        </LinearLayout>
                                        <View
                                            android:id="@+id/lnGayaHidup"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_height="@dimen/_2sdp"
                                            android:layout_gravity="center"
                                            android:visibility="gone"
                                            android:background="@color/black"/>
                                    </LinearLayout>
                                </LinearLayout>



                            </HorizontalScrollView>
                            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                                android:id="@+id/swipeRefresh"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <com.facebook.shimmer.ShimmerFrameLayout
                                        android:id="@+id/shimmerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="vertical">
                                            <include layout="@layout/placeholder_news_list_item"/>
                                            <include layout="@layout/placeholder_news_list_item"/>
                                            <include layout="@layout/placeholder_news_list_item"/>
                                        </LinearLayout>


                                    </com.facebook.shimmer.ShimmerFrameLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rvNews"
                                        android:layout_width="match_parent"
                                        android:visibility="gone"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>


                            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>









                        </LinearLayout>





                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lrEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:layout_centerInParent="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tidak ada data."
                    android:includeFontPadding="false"
                    android:fontFamily="@font/rfbold"
                    android:textSize="@dimen/_18sdp"/>

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:text="Tidak ada data"
                    android:textColor="@color/second_font"
                    android:fontFamily="@font/rfreg"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:id="@+id/vOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/overlay"/>

        <LinearLayout
            android:id="@+id/RlbottomSheetWebview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/container_bottom_sheet2"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:orientation="vertical">
            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:layout_width="wrap_content"
                app:tint="@color/black"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>


            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="match_parent"/>





        </LinearLayout>




<!--        BOTTOM SHEET SHARE POST -->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/rlBottomSheetShare"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                android:layout_above="@id/rlBottomSheet"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardBackgroundColor="@color/background"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_60sdp"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_height="@dimen/_60sdp">
                            <ImageView
                                android:id="@+id/ivPost"
                                android:layout_width="match_parent"
                                android:background="@color/black"
                                android:layout_height="match_parent"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvPostTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rfmed"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp"
                            android:text="Delegasi Kenya dan Bangladesh tiba di Madiun ikuti pelatihan kesehatan"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPostDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rfreg"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="2023-09-02 | 17:32:20"/>




                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/container_bottom_sheet2"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                        android:layout_width="wrap_content"
                        app:tint="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Simpan dan bagikan."
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/rfmed"
                        android:textSize="@dimen/_15sdp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_save"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/rfmed"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"
                                android:text="Simpan"/>
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_gravity="center"
                                android:id="@+id/btnShare"
                                android:background="@drawable/ic_share"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/rfmed"
                                android:textColor="@color/black"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"
                                android:text="Bagikan"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>






    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
