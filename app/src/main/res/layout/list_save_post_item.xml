<?xml version="1.0" encoding="utf-8"?>


    <com.zerobranch.layout.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:draggedItem="@id/lrMain"
        app:rightItem="@id/rlDelete"
        app:swipeDirection="left">



        <RelativeLayout
            android:id="@+id/rlDelete"
            android:layout_gravity="end"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent">
            <ImageButton

                android:layout_width="@dimen/_22sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/ic_delete"/>
        </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/lrMain"
        app:cardBackgroundColor="@color/background"
        android:layout_width="match_parent"
        app:cardElevation="0dp"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_60sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:layout_height="@dimen/_60sdp">
                    <ImageView
                        android:id="@+id/ivThumbnail"
                        android:layout_width="@dimen/_60sdp"
                        android:background="@color/shimmer_placeholder"
                        android:layout_height="@dimen/_60sdp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRedactionName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rfreg"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:text="CNN Indonesia"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rfmed"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:text="Delegasi Kenya dan Bangladesh tiba di Madiun ikuti pelatihan kesehatan"/>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rfreg"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:includeFontPadding="false"
                android:textSize="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="2023-09-02 | 17:32:20"/>

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rfreg"
                android:layout_gravity="center_vertical"
                android:textColor="@color/second_font"
                android:includeFontPadding="false"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Delegasi Republik Kenya dan Bangladesh tiba di Indonesia untuk mengikuti rangkaian kegiatan pelatihan kesehatan khususnya tentang keluarga berencana dan reproduksi selama satu pekan ke depan di Kota Madiun, Jawa ..."/>

            <ImageButton
                android:id="@+id/btnShare"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_share"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



    </com.zerobranch.layout.SwipeLayout>

