<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_10sdp"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.onboard.RedactionsPickerFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rbbold"
                    android:textSize="@dimen/_14sdp"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="Pilih favorit Anda"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rbreg"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/second_font"
                    android:text="Kami menggunakan pilihan ini untuk memprioritaskan sajian berita dari media berita favorit Anda pada halaman utama."/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rowCount="9"
                        android:columnCount="2">



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCnn"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="0"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="center"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_cnn" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTribbun"
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="0"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="c"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_tribun" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvAntara"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="1"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_antara" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvOkeZone"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="1"
                            app:cardElevation="@null"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="end"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_okezone" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCnbc"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="2"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_cnbc" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvKumparan"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="2"
                            app:cardElevation="@null"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="end"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_kumparan" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMerdeka"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="3"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_merdeka" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvSindoNews"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="3"
                            app:cardElevation="@null"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="end"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_sindonews" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTempo"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="4"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/tempo" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvSuara"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="4"
                            app:cardElevation="@null"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="end"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_suara" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvRepublika"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="5"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="start"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_republika" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvJpnn"
                            android:layout_width="@dimen/_145sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="5"
                            app:cardElevation="@null"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:layout_gravity="end"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_jpnn" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>







                    </GridLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
