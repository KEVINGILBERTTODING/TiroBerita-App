<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.onboard.RedactionsPickerFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rfbold"
                    android:textSize="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:includeFontPadding="false"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:text="Pilih media favorit Anda"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rfreg"
                    android:textSize="@dimen/_11sdp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/second_font"
                    android:text="Kami menggunakan pilihan ini untuk memprioritaskan sajian berita dari media berita favorit Anda pada halaman utama."/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rowCount="6"
                        android:columnCount="2">



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCnn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="0"
                            app:cardElevation="@null"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_gravity="fill"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_cnn" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTribbun"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="0"
                            app:cardElevation="@null"
                            app:cardUseCompatPadding="true"
                            android:layout_gravity="fill"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_tribun" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvKumparan"
                            android:layout_width="wrap_content"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="1"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_80sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_kumparan" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvOkeZone"
                            android:layout_width="0dp"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="1"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_okezone" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvCnbc"
                            android:layout_width="wrap_content"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="2"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_100sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_cnbc" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvAntara"
                            android:layout_width="0dp"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="2"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_antara" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvMerdeka"
                            android:layout_width="wrap_content"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="3"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_merdeka" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvSindoNews"
                            android:layout_width="0dp"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="3"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_sindonews" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvTempo"
                            android:layout_width="wrap_content"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="4"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/tempo" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvSuara"
                            android:layout_width="0dp"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="4"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_suara" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvRepublika"
                            android:layout_width="wrap_content"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="5"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="0">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_republika" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvJpnn"
                            android:layout_width="0dp"
                            android:layout_gravity="fill"
                            app:cardUseCompatPadding="true"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_row="5"
                            app:cardElevation="@null"
                            app:cardCornerRadius="@dimen/_5sdp"
                            android:background="@color/black"
                            android:layout_column="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="@dimen/_90sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/logo_jpnn" />
                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>







                    </GridLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/vOverlay"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@color/overlay"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/rlBottomSheet"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_20sdp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                android:layout_above="@id/rlBottomSheet"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivRedactionLogo"
                        android:layout_width="@dimen/_50sdp"
                        android:src="@drawable/logo_cnn"
                        android:layout_alignParentStart="true"
                        android:layout_height="@dimen/_50sdp"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@id/ivRedactionLogo"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvRedaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rfbold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"/>

                        <TextView
                            android:id="@+id/tvDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/rfreg"
                            android:textColor="@color/second_font"
                            android:textSize="@dimen/_10sdp"/>

                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/container_bottom_sheet"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apakah Anda yakin?"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/rfmed"
                        android:textSize="@dimen/_15sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Anda dapat mengubah pilihan anda pada menu pengaturan."
                        android:textColor="@color/second_font"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/rfreg"
                        android:textSize="@dimen/_11sdp"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/black"
                        android:text="Simpan"
                        android:id="@+id/btnSimpan"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/rfbold"
                        app:cornerRadius="@dimen/_5sdp"/>
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
