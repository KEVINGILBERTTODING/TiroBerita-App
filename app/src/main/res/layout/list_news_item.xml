<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_height="@dimen/_60sdp">
                <ImageView
                    android:id="@+id/ivThumbnail"
                    android:layout_width="@dimen/_60sdp"
                    android:background="@color/black"
                    android:layout_height="@dimen/_60sdp"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rfmed"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:text="Delegasi Kenya dan Bangladesh tiba di Madiun ikuti pelatihan kesehatan"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rfreg"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:includeFontPadding="false"
            android:textSize="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="2023-09-02 | 17:32:20"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rfreg"
            android:layout_gravity="center_vertical"
            android:textColor="@color/second_font"
            android:includeFontPadding="false"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Delegasi Republik Kenya dan Bangladesh tiba di Indonesia untuk mengikuti rangkaian kegiatan pelatihan kesehatan khususnya tentang keluarga berencana dan reproduksi selama satu pekan ke depan di Kota Madiun, Jawa ..."/>

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_share"/>


    </LinearLayout>

</RelativeLayout>